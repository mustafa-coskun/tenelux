# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DB_PATH=./data/tenelux.db

# WebSocket
WS_PORT=3001

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session
SESSION_SECRET=your-secret-key-here

# ============================================
# AD CONFIGURATION
# ============================================

# Enable/Disable Ads
REACT_APP_ADS_ENABLED=true

# Ad Provider (propellerads)
REACT_APP_AD_PROVIDER=propellerads

# PropellerAds Zone IDs (Get from https://partners.propellerads.com)
REACT_APP_PROPELLER_BANNER_ZONE=your_banner_zone_id
REACT_APP_PROPELLER_INTERSTITIAL_ZONE=your_interstitial_zone_id
REACT_APP_PROPELLER_PUSH_ZONE=your_push_zone_id
REACT_APP_PROPELLER_ONCLICK_ZONE=your_onclick_zone_id
