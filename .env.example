# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DB_PATH=./data/tenelux.db

# WebSocket
WS_PORT=3001

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session
SESSION_SECRET=your-secret-key-here

# ============================================
# AD CONFIGURATION
# ============================================

# Enable/Disable Ads
REACT_APP_ADS_ENABLED=true

# Ad Provider (crazygames - simple and easy monetization)
REACT_APP_AD_PROVIDER=crazygames

# Note: Crazy Games SDK handles ads automatically
# No additional configuration needed!
# Just upload your game to CrazyGames.com and ads will work
