# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DB_PATH=./data/tenelux.db

# WebSocket
WS_PORT=3001

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session
SESSION_SECRET=your-secret-key-here

# ============================================
# AD CONFIGURATION
# ============================================

# Enable/Disable Ads
REACT_APP_ADS_ENABLED=true

# Ad Provider (medianet - clean contextual ads from Yahoo & Bing)
REACT_APP_AD_PROVIDER=medianet

# Media.net IDs (Get from https://www.media.net/publishers)
# Sign up, add your site, get Customer ID and create ad units
REACT_APP_MEDIANET_CUSTOMER_ID=your_customer_id
REACT_APP_MEDIANET_MAIN_MENU=your_ad_unit_id
REACT_APP_MEDIANET_GAME_END=your_ad_unit_id
REACT_APP_MEDIANET_SIDEBAR=your_ad_unit_id
