# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DB_PATH=./data/tenelux.db

# WebSocket
WS_PORT=3001

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session
SESSION_SECRET=your-secret-key-here

# ============================================
# AD CONFIGURATION
# ============================================

# Enable/Disable Ads
REACT_APP_ADS_ENABLED=true

# Ad Provider (adsense, admob, unity, propeller)
REACT_APP_AD_PROVIDER=adsense

# Google AdSense
REACT_APP_ADSENSE_CLIENT=ca-pub-XXXXXXXXXXXXXXXX

# Ad Unit IDs (AdSense Slot IDs)
# SADECE YETERLİ İÇERİĞE SAHİP SAYFALARDA KULLANIN (AdSense Policy)

# Ana menü reklamı (oyun kuralları ve seçenekler ile)
REACT_APP_AD_MAIN_MENU=XXXXXXXXXX

# Oyun sonu reklamı (sonuçlar ve istatistikler ile)
REACT_APP_AD_GAME_END=XXXXXXXXXX

# İstatistik paneli reklamı (detaylı veriler ile)
REACT_APP_AD_STATS=XXXXXXXXXX

# Kenar çubuğu reklamı (ek içerik ile)
REACT_APP_AD_SIDEBAR=XXXXXXXXXX

# Alt bilgi reklamı (site bilgileri ile)
REACT_APP_AD_FOOTER=XXXXXXXXXX

# UYARI: Aşağıdaki placement'lar AdSense politikalarına aykırı olabilir
# REACT_APP_AD_LOBBY=XXXXXXXXXX          # Bekleme ekranları - KULLANMAYIN
# REACT_APP_AD_TOURNAMENT=XXXXXXXXXX     # Kısa geçiş ekranları - KULLANMAYIN

# Google AdMob (Mobile)
REACT_APP_ADMOB_APP_ID=ca-app-pub-XXXXXXXXXXXXXXXX~XXXXXXXXXX
REACT_APP_ADMOB_BANNER_ID=ca-app-pub-XXXXXXXXXXXXXXXX/XXXXXXXXXX
REACT_APP_ADMOB_INTERSTITIAL_ID=ca-app-pub-XXXXXXXXXXXXXXXX/XXXXXXXXXX
REACT_APP_ADMOB_REWARDED_ID=ca-app-pub-XXXXXXXXXXXXXXXX/XXXXXXXXXX

# Unity Ads
REACT_APP_UNITY_GAME_ID=1234567
REACT_APP_UNITY_TEST_MODE=true
