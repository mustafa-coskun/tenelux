# Production Environment Variables
# Copy this to .env on your server

# Server Configuration
NODE_ENV=production
PORT=3001

# Database
DB_PATH=./data/tenelux.db

# WebSocket
WS_PORT=3001

# CORS (your production domain + Crazy Games)
ALLOWED_ORIGINS=https://game.coshbilisim.com,https://www.crazygames.com,https://crazygames.com

# Session Secret (CHANGE THIS!)
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# Backend URL (Deploy backend to Render.com or similar)
# Replace with your actual backend URL after deployment
REACT_APP_API_URL=https://your-backend.onrender.com
REACT_APP_WS_URL=wss://your-backend.onrender.com

# ============================================
# AD CONFIGURATION
# ============================================

# Enable Ads
REACT_APP_ADS_ENABLED=true
REACT_APP_AD_PROVIDER=crazygames

DISABLE_ESLINT_PLUGIN="true"